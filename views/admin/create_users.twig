{% extends 'user_layout.twig' %}

{% block title %}Create New User{% endblock %}
{% block content %}
    <main class="w-full max-w-md mx-auto p-6">
        <div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
            <div class="p-4 sm:p-7">
                <div class="text-center">
                    <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Create New User</h1>
                </div>

                <div class="mt-5">
                    <!-- Registration Form -->
                    <form class="mt-6" action="" method="post">
                        <div class="grid gap-y-4">
                            <!-- Form Group for email -->
                            <div>
                                <div class="flex items-center justify-between">
                                    <label for="email" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Email</label>
                                </div>
                                <div class="mt-2">
                                    <input name="email" value="{{ model.email }}" type="email" class="c-input {{ model.errors.email is not empty ? 'ring-red-500' : 'dark:ring-gray-300' }} focus:{{ model.errors.email is not empty ? 'ring-red-500 focus:border-red-500' : 'ring-blue-500 focus:border-blue-500' }}">
                                    {% if model.errors.email is not empty %}
                                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.email[0] }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <!-- End Form Group for email -->

                            <!-- Form Group for username -->
                            <div>
                                <div class="flex items-center justify-between">
                                    <label for="username" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Username</label>
                                </div>
                                <div class="mt-2">
                                    <input name="username" value="{{ model.username }}" type="tel" class="c-input {{ model.errors.username is not empty ? 'ring-red-500' : 'dark:ring-gray-300' }} focus:{{ model.errors.username is not empty ? 'ring-red-500 focus:border-red-500' : 'ring-blue-500 focus:border-blue-500' }}">
                                    {% if model.errors.username is not empty %}
                                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.username[0] }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <!-- End Form Group for username -->

                            <!-- Form Group for password -->
                            <div>
                                <div class="flex items-center justify-between">
                                    <label for="kLMurid" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Password</label>
                                </div>
                                <div class="mt-2">
                                    <div class="relative">
                                        <input id="password" name="password" type="password" autocomplete="new-password" class="c-input {{ model.errors.password is not empty ? 'ring-red-500' : 'dark:ring-gray-300' }} focus:{{ model.errors.password is not empty ? 'ring-red-500 focus:border-red-500' : 'ring-blue-500 focus:border-blue-500' }}">
                                        <button type="button" data-hs-toggle-password='{"target": "#password"}' class="absolute top-0 end-0 p-3.5 rounded-e-md dark:focus:outline-none">
                                            <svg class="flex-shrink-0 size-3.5 text-gray-400 dark:text-neutral-600" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path class="hs-password-active:hidden" d="M9.88 9.88a3 3 0 1 0 4.24 4.24"/>
                                                <path class="hs-password-active:hidden" d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68"/>
                                                <path class="hs-password-active:hidden" d="M6.61 6.61A13.526 13.526 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61"/>
                                                <line class="hs-password-active:hidden" x1="2" x2="22" y1="2" y2="22"/>
                                                <path class="hidden hs-password-active:block" d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                                                <circle class="hidden hs-password-active:block" cx="12" cy="12" r="3"/>
                                            </svg>
                                        </button>
                                    </div>
                                    {% if model.errors.password is not empty %}
                                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.password[0] }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <!-- End Form Group for password -->

                            <!-- Form Group for confirm_password  -->
                            <div>
                                <div class="flex items-center justify-between">
                                    <label for="confirm_password" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Confirm Password</label>
                                </div>
                                <div class="mt-2">
                                    <div class="relative">
                                        <input id="confirm_password" name="confirm_password" type="password" class="c-input {{ model.errors.confirm_password is not empty ? 'ring-red-500' : 'dark:ring-gray-300' }} focus:{{ model.errors.confirm_password is not empty ? 'ring-red-500 focus:border-red-500' : 'ring-blue-500 focus:border-blue-500' }}">
                                        <button type="button" data-hs-toggle-password='{"target": "#confirm_password"}' class="absolute top-0 end-0 p-3.5 rounded-e-md dark:focus:outline-none">
                                            <svg class="flex-shrink-0 size-3.5 text-gray-400 dark:text-neutral-600" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path class="hs-password-active:hidden" d="M9.88 9.88a3 3 0 1 0 4.24 4.24"/>
                                                <path class="hs-password-active:hidden" d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68"/>
                                                <path class="hs-password-active:hidden" d="M6.61 6.61A13.526 13.526 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61"/>
                                                <line class="hs-password-active:hidden" x1="2" x2="22" y1="2" y2="22"/>
                                                <path class="hidden hs-password-active:block" d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                                                <circle class="hidden hs-password-active:block" cx="12" cy="12" r="3"/>
                                            </svg>
                                        </button>
                                    </div>
                                    {% if model.errors.confirm_password is not empty %}
                                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.confirm_password[0] }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <!-- End Form Group for confirm_password  -->

                            <button type="submit" class="c-form-btn">Register</button>
                        </div>
                    </form>
                    <!-- End Registration Form -->
                </div>
            </div>
        </div>
    </main>
{% endblock %}